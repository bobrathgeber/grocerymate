<!DOCTYPE html>
<html>
  <head>
    <title>Grocerymate</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="wrapper">
    <header>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <div class="login">
        <% if user_signed_in? %>
          <p>Hello, <%=current_user.email %></p>
        <% else %>
          <p>Sign-In</p>
        <% end %>
      </div>
      <div class="nav-button">
        <%= link_to image_tag("hamburger.jpg", size: "50x50", alt: "Menu"), lists_path %>
      </div>
      <div class="nav">
        <ul>
          <li><%= link_to "Lists", lists_path %></li>
          <li><%= link_to "Items", items_path %></li>
          <li><a href="#">Account</a></li>
        </ul>
      </div>
    </header>
    <div class="content">
      <%= yield %>
    </div>
    <footer>
    </footer>
  </div>
  </body>
</html>
